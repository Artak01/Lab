

Գրել ծրագիր, որը լեքսիկոգրաֆիկական կհամեմատի երկու զանգվածներ։

#include <iostream>

void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
        std::cout << "Enter element: ";
        std::cin >> arr[i];
    }
}
void print(int* arr, int size){
    for(int i = 0; i < size; ++i){
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl; 
}

int chack(int* arr1, int* arr2, int size1, int size2){
    if (size1 > size2){
        return 1;
    } else if (size2 > size1){
        return -1;
    } else {
        for(int i = 0; i < size1; ++i){
            if (arr1[i] > arr2[i]){
                return 1;
            } else if(arr1[i] < arr2[i]){
                return -1;
            }
        }
    }
    return 0;
}
int main()
{

    int size1 = 0;
    std::cout << "Enter first size: ";
    std::cin >> size1;
    int* arr1 = new int[size1];
    scan(arr1, size1);
    int size2 = 0;
    std::cout << "Enter secend size: ";
    std::cin >> size2;
    int* arr2 = new int[size2];
    scan(arr2, size2);
    print(arr1, size1);
    print(arr2, size2);
    int x = chack(arr1, arr2, size1, size2);
    std::cout << "x = " << x << std::endl; 

    return 0; 
}


Գրել ծրագիր, որը կտպի զանգվածի կենտ էլեմենտների քանակը։

#include <iostream>

void scan(int*, int);
void print(int*, int);
int odd(int*, int);

int main()
{
    srand(time(NULL));
    int size = 0;
    std::cout << "Enter the size: ";
    std::cin >> size;
    int* arr = new int[size];
    scan(arr, size);
    print(arr, size);
    std::cout << "Odd count number: " << odd(arr, size) << std::endl;
    
    return 0;
}

void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
         arr[i] = rand()%9;
    }
}
void print(int* arr, int size){
    for(int i = 0; i < size; ++i){
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl; 
}



int odd(int* arr, int size){
    int count = 0;
    for(int i = 0; i < size; ++i){
        if (arr[i] %2 != 0){
            count++;
        }
    }
    return count;
}

Գրեք ծրագիր,  որը օգտվողին թույլ կտա մուտքագրել char-երի զանգված և տողը վերածում է մեծատառի։

#include <iostream>

int is_lower(char c){
    return (c >= 'a' && c <= 'z');
}
int main()
{
    char str[20];
    std::cout << "enter the string: ";
    std::cin >> str;
    
    for(int i = 0; str[i]; ++i){
        if(is_lower(str[i])){
            str[i] -= 32; 
            }
        }
    
    std::cout << str;
    return 0;
}

Գրել ծրագիր, որը թույլ կտա մուտքագրել char-երի զանգված։ Զանգվածում էլեմենտները դասավորել հակառակ հերթականությամբ և տպել էկրանին։

#include <iostream>

int len(char str[]){  
    int l = 0;  
    while(str[l]){  
        ++l;  
    }  
    return l;  
}  

int main()
{
    char str[20];
    std::cout << "enter the string: ";
    std::cin >> str;
    int size = len(str);
    for(int i = 0; i < size/2; ++i){
        std::swap(str[i], str[size - 1 - i]);
    }
    
    std::cout << str;
    return 0;
}

Գրեք ծրագիր, որը օգտվողին թույլ կտա մուտքագրել ամբողջ թվային զանգվածի էլեմենտների արժեքները և  կգտնի զանգվածի ամենամեծ և 
     ամենափոքր տարրերի ինդեքսների տարբերությունը:
#include <iostream>

void scan(int*, int);
void print(int*, int);
int odd(int*, int);

int main()
{
    srand(time(NULL));
    int size = 0;
    std::cout << "Enter the size: ";
    std::cin >> size;
    int* arr = new int[size];
    scan(arr, size);
    print(arr, size);
    std::cout << "Tarberutyun: " << odd(arr, size) << std::endl;
    
    return 0;
}

void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
         arr[i] = rand()%9;
    }
}
void print(int* arr, int size){
    for(int i = 0; i < size; ++i){
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl; 
}



int odd(int* arr, int size){
    int min = arr[0];
    int max = arr[0];
    int k = 0;
    int f = 0;
    for(int i = 0; i < size; ++i){
        if (max < arr[i]){
            max = arr[i];
            k = i;
        }
        if (min > arr[i]){
            min = arr[i];
            f = i;
        }
    }
    return k - f;
}


Գրեք ծրագիր, որը ամբողջ թվային զանգվածի բոլոր զույգ էլեմենտները  նույն զանգվածի մեջ՝ կտեղավորի զանգվածի սկզբից, իսկ կենտերը վերջից:

#include <iostream>

void scan(int* arr, int size){
    for(int i = 0; i < size; ++i){
        arr[i] = rand()%9;
    }
}

void print(int* arr, int size){
    for(int i = 0; i < size; ++i){
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl; 
}

int main()
{
    const int size = 5;
    
    int arr[size];
    scan(arr, size);
    print(arr, size);
    int k = size - 1;
    while(arr[k] %2 == 0){
        k--;
        }
    for(int i = 0; i < k; ++i){
        if (arr[i] %2 == 0){
            std::swap(arr[i], arr[k]);
            while(arr[k] %2 == 0){
            k--;
            }
        }
    }
    print(arr, size);
    


    return 0;
}













