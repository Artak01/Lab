Binary search.

#include <iostream>

int search(int* arr, int size, int val){
    int l = 0;
    int r = size - 1;
    
    while(l <= r){
        int m = l + (r - l) / 2;
        if (arr[m] == val){
            return m;
        }
        if (arr[m] > val){
            r = m - 1;
        } else {
            l = m + 1;
        }
    }
    return -1;
}

int main()
{
    int arr[6] = {1,2,3,4,5,6};
    std::cout << "Index: " << search(arr, 6, 5);

    return 0;
}



