#include <iostream>

int power(int num, int ex){
    if (ex <= 0){
        return 1;
    }
    if (num == 0 || num == 1){
        return num;
    }
    int k = 1;
    for(int i = 0; i < ex; ++i){
        k *= num;
    }
    return k;
}

int main()
{
    std::cout << power(2, 2);

    return 0;
}


